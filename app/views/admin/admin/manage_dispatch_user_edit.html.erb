<% if params[:id] and params[:id] !='' and params[:id] !=nil %>
<script type="text/javascript">
$(document).ready(function () {
    $('#email').attr('readonly', true);
    $('.password').hide();
});
</script>
<% else %>
<script type="text/javascript">
$(document).ready(function () {
    $('#email').val('');
    $('#password').val('');
});
</script>

<% end %>
  <div class="container">
   <div class="serch-fld">
          <label class="margin-top">Dashboard </label>
           <span class="align-right">
              <input class="form-control" type="search">
                <input value="" class="search-submit" type="submit" />
            </span>
           
        </div>  
        <ol class="breadcrumb">
      <li class="active"> Main</li>
      </ol>
        <div class="form-group subcontainer">        
        <% @all_info = User.where(:id => params[:id]) %>
            <% @all_info.each do |rara| %>
                <% @firsname = rara.FirstName %>
                <% @lasname = rara.LastName %>
                <% @email = rara.email %>
                <% @contact = rara.Contact %>
             <% end %>
        <% @selected_center = UsersServiceCenter.where(:user_id => params[:id]) %>
             <% @selected_center.each do |selected| %>   
                <% @selected_id =  selected.service_center_id %>
             <% end %>
            
                <form method="POST" action="/create_user">
                <input type="hidden" name="user_id" value="<%= params[:id] %>">
                <label>FirstName</label>
                    <input type="text" name="FirstName" value="<%= @firsname %>"></br>
                <label>LastName</label>
                    <input type="text" name="LastName" value="<%= @lasname %>"></br>
                <label>Email</label>
                    <input type="email" id="email" name="email" value="<%= @email %>"></br>
                <label class="password">Password</label>
                    <input type="password" id="password" class="password" name="password" value=""></br>
                <label>Contact</label>
                    <input type="text" name="Contact" value="<%= @contact%>"></br>
                <label>Service Center</label>
                    <select name="service_center_id">
                        <option>Select Service Center</option>
                        <% @service_centers.each do |service_center| %>
                            <% if(service_center.id == @selected_id) %>
                                <% @selected = "selected=selected"%>
                            <% else %>
                                <% @selected = "" %>
                            <% end %>
                            <option value="<%= service_center.id %>" <%= @selected%>><%= service_center.Name %></option>
                        <% end %>
                    </select></br>
                <input type="submit" name="commit" value="Update"><a href="/admin/manage_dispatch_user">Back</a>
                </form>
            
        </div>
      </div>

